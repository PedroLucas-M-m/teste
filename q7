import urllib.request, urllib.parse, urllib.error


url = 'https://novorevan.brisanet.net.br/telefones.txt'
soma = 0 
contador = 0
parei = False
print("baixando com urllib")
urllib.request.urlretrieve(url, "telefones.txt")
 
print("baixando com urllib2")
f = urllib.request.urlopen(url)
data = f.read()
with open("telefones.txt", "wb") as code:
    code.write(data)
    incod = 'utf-8'
    telefones = str(data.decode(incod)).split('\n')
    del telefones[-1]
    
    for telefone in telefones:
        
        for i in range(5):
            if telefone[i] == telefone[i+1]:
                parei = True
                break
            soma += int(telefone[i])
        
        if not parei and soma % 2 == 0 and telefone[-1] == telefone[0]:
            contador += 1
            
        print(soma, telefone)
        soma = 0
    

print(contador)
